{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "npm run build -- --filter=@blitzclaw/web",
  "installCommand": "npm install",
  "outputDirectory": "apps/web/.next",
  "ignoreCommand": "npx turbo-ignore --filter=@blitzclaw/web",
  "git": {
    "deploymentEnabled": {
      "main": true,
      "master": true
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-BlitzClaw-Instance, X-BlitzClaw-Secret" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api|_next|favicon.ico).*)",
      "destination": "/apps/web/$1"
    }
  ],
  "functions": {
    "apps/web/src/app/api/**/*.ts": {
      "maxDuration": 30
    },
    "apps/web/src/app/api/proxy/**/*.ts": {
      "maxDuration": 60
    }
  }
}
